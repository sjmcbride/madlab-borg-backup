[Unit]
Description=Run Borg Backup Daily
Documentation=https://borgbackup.readthedocs.io/
Requires=borg-backup.service

[Timer]
# Run daily at 2 AM
OnCalendar=daily
Persistent=true
RandomizedDelaySec=1800

# Ensure service is not running when timer triggers
OnBootSec=15min
OnUnitInactiveSec=24h

[Install]
WantedBy=timers.target